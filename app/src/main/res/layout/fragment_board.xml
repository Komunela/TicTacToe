<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/board3x3"
        android:layout_width="325dp"
        android:layout_height="325dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Top Row -->
        <ImageButton
            android:id="@+id/cell_tl"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/h_boardGL1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/v_boardGL1"/>

        <ImageButton
            android:id="@+id/cell_tm"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/h_boardGL1"
            app:layout_constraintStart_toEndOf="@id/v_boardGL1"
            app:layout_constraintEnd_toStartOf="@id/v_boardGL2"/>

        <ImageButton
            android:id="@+id/cell_tr"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/h_boardGL1"
            app:layout_constraintStart_toEndOf="@id/v_boardGL2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Middle Row -->
        <ImageButton
            android:id="@+id/cell_ml"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/h_boardGL1"
            app:layout_constraintBottom_toTopOf="@id/h_boardGL2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/v_boardGL1"/>

        <ImageButton
            android:id="@+id/cell_mm"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/h_boardGL1"
            app:layout_constraintBottom_toTopOf="@id/h_boardGL2"
            app:layout_constraintStart_toEndOf="@id/v_boardGL1"
            app:layout_constraintEnd_toStartOf="@id/v_boardGL2"/>

        <ImageButton
            android:id="@+id/cell_mr"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/h_boardGL1"
            app:layout_constraintBottom_toTopOf="@id/h_boardGL2"
            app:layout_constraintStart_toEndOf="@id/v_boardGL2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Bottom Row -->
        <ImageButton
            android:id="@+id/cell_bl"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/h_boardGL2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/v_boardGL1"/>

        <ImageButton
            android:id="@+id/cell_bm"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/h_boardGL2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/v_boardGL1"
            app:layout_constraintEnd_toStartOf="@id/v_boardGL2"/>

        <ImageButton
            android:id="@+id/cell_br"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/h_boardGL2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/v_boardGL2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h_boardGL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3333334"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/pink"
            app:layout_constraintBottom_toBottomOf="@+id/h_boardGL1"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h_boardGL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6666667" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/pink"
            app:layout_constraintBottom_toBottomOf="@+id/h_boardGL2"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/v_boardGL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3333334"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/pink"
            app:layout_constraintStart_toStartOf="@id/v_boardGL1"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/v_boardGL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6666667"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/pink"
            app:layout_constraintStart_toStartOf="@id/v_boardGL2"/>
            -->

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
