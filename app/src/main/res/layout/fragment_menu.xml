<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="48dp"
        android:layout_marginVertical="216dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/menuGL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/menuGL2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/menuGL3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />

        <Button
            android:id="@+id/newgame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="@id/menuGL1"
            app:layout_constraintTop_toTopOf="parent"
            android:text="New Game"
            android:textColor="@color/black"
            android:backgroundTint="@color/blue">
        </Button>

        <Button
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="@id/menuGL1"
            app:layout_constraintBottom_toBottomOf="@id/menuGL2"

            android:text="Settings"
            android:textColor="@color/black"
            android:backgroundTint="@color/blue">
        </Button>

        <Button
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="@id/menuGL2"
            app:layout_constraintBottom_toBottomOf="@id/menuGL3"

            android:text="Profile"
            android:textColor="@color/black"
            android:backgroundTint="@color/blue">
        </Button>

        <Button
            android:id="@+id/leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="@id/menuGL3"
            app:layout_constraintBottom_toBottomOf="parent"

            android:text="Leaderboard"
            android:textColor="@color/black"
            android:backgroundTint="@color/blue">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>